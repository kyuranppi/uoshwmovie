<div class="container">
    <form action="new_movie">
    <div class="form-group">
    <label for="exampleInputEmail1">Movie title</label>
    <input type="text" class="form-control" name="title" aria-describedby="emailHelp" placeholder="title">
</div>
    <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

<div class="container">
    <% @movies.each do |movie| %>
    <section class="row">
    <div class="col-md-3 poster">
        <img src="<%= movie.poster %>" />
    </div>
    <div class="col-md-9 content">
        <p>Title : <%=movie.title %></p>
        <p>Director : <%=movie.director %></p>
        <p>Genre : <%=movie.genre %></p>
 
        <form action="edit" method="get">
            <textarea name="id" style="display:none;"><%= movie.id %></textarea>
            <button type="submit" class="btn btn-info">Edit</button>
        </form>
         <form action="delete" method="get">
            <textarea name="id" style="display:none;"><%= movie.id %></textarea>
            <button type="submit" class="btn btn-danger">Delete</button>
        </form>

    </div>
    </section>
    <%end%>
</div>