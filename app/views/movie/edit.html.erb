<div class="container">
    <form action="update" method="get">
        <section class="row">
             <div class="col-md-3 poster">
                    <img src="<%= @edit_movie.poster %>" />
            </div>
                <div class="col-md-9 content">
                    <textarea name="id" style="display:none;"><%= @edit_movie.id %></textarea>
                    <textarea class="form-control" name="title" id="content" row="3"><%= @edit_movie.title %></textarea>
                    <textarea class="form-control" name="director" id="content" row="3"><%= @edit_movie.director %></textarea>
                    <textarea class="form-control" name="genre" id="content" row="3"><%= @edit_movie.genre %></textarea>
                
                <button type="submit" class="btn btn-primary">Submit</button>
                </div>
        </section>
    
    </form>
</div>